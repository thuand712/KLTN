<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    android:elevation="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgNV"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_account_circle_print_24dp"/>
        <TextView
            android:id="@+id/txtTenNV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nguyễn Thị Tâm"
            android:layout_toRightOf="@id/imgNV"
            android:textColor="@color/mauhong"
            android:textStyle="bold"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: tam9989@gmail.com"
            android:layout_toRightOf="@id/imgNV"
            android:layout_below="@id/txtTenNV"
            android:textSize="13sp"
            />

        <TextView
            android:id="@+id/txtNgayDangKy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày đăng ký: 20/07/2020"
            android:layout_toRightOf="@id/imgNV"
            android:layout_below="@id/txtEmail"
            android:textSize="13sp"
            />
        <TextView
            android:id="@+id/txtTrangThai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trạng thái: Đang hoạt động"
            android:layout_toRightOf="@id/imgNV"
            android:layout_below="@id/txtNgayDangKy"
            android:textSize="13sp"
            />

        <ImageButton
            android:id="@+id/btnChiTiet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_next_print_24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>